@{
    ViewData["Title"] = "Dashboard - Inventory Management";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary">📊 Inventory Management System</h1>
        <p class="text-muted">Manage your employees, inventories, and assignments efficiently.</p>
    </div>

    <div class="row g-4">
        <!-- Inventory -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-box-seam display-3 text-success"></i>
                    <h5 class="card-title mt-3">Inventory Master</h5>
                    <p class="text-muted">Manage all inventory items, including type, brand, and status.</p>
                    <a href="/Inventory/Index" class="btn btn-outline-success">Go to Inventory</a>
                </div>
            </div>
        </div>

        <!-- Employees -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill display-3 text-primary"></i>
                    <h5 class="card-title mt-3">Employee Master</h5>
                    <p class="text-muted">Add, edit, and manage employees along with their roles and departments.</p>
                    <a href="/Employee/Index" class="btn btn-outline-primary">Go to Employees</a>
                </div>
            </div>
        </div>

        <!-- Assignments -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-arrow-left-right display-3 text-warning"></i>
                    <h5 class="card-title mt-3">Assignments</h5>
                    <p class="text-muted">Track which employee has which inventory assigned/unassigned.</p>
                    <a href="/Assignment/Index" class="btn btn-outline-warning">Go to Assignments</a>
                </div>
            </div>
        </div>
    </div>


</div>
